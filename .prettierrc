{
	"useTabs": true,
	"tabWidth": 8,
	"printWidth": 80,
	"semi": true,
	"singleQuote": false,
	"trailingComma": "es5",
	"proseWrap": "preserve",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": ["*.ts", "*.js"],
			"options": {
				"parser": "typescript"
			}
		},
		{
			"files": ["*.mustache", "*.html", "*.css"],
			"options": {
				"parser": "html"
			}
		},
		{
			"files": ["*.md"],
			"options": {
				"parser": "markdown",
				"proseWrap": "preserve"
			}
		}
	]
}
